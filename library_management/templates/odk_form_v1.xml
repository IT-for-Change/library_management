<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa"
    xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>{{ title }}</h:title>
        <model odk:xforms-version="1.0.0">
            <instance>
                <data id="{{ id }}" version="1">
                    <startTime />
                    <ela_collect>
                        <intro />
                        <learner />
                        <activity />
                        <prompt />
                        <recording />
                    </ela_collect>
                    <meta>
                        <instanceID />
                    </meta>
                </data>
            </instance>
            <instance id="__last-saved" src="jr://instance/last-saved" />
            <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/data/startTime"
                type="dateTime" />
            <bind nodeset="/data/ela_collect/intro" readonly="true()" type="string" />
            <bind nodeset="/data/ela_collect/learner" required="true()" type="string" />
            <bind nodeset="/data/ela_collect/activity" required="true()" type="string" />
            <setvalue event="odk-instance-first-load" ref="/data/ela_collect/activity"
                value=" instance('__last-saved')/data/ela_collect/activity " />
            <bind nodeset="/data/ela_collect/prompt" readonly="true()" type="string" />
            <bind nodeset="/data/ela_collect/recording" odk:quality="normal" required="true()"
                type="binary" />
            <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string" />
        </model>
    </h:head>
    <h:body>
        <group appearance="field-list" ref="/data/ela_collect">
            <label>Audio Question</label>
            <input ref="/data/ela_collect/intro">
                <label>{{ cohort }}</label>
            </input>
            <select1 appearance="minimal" ref="/data/ela_collect/learner">
                <label>Learner</label>
                <item>
                    <label>ANITHA N</label>
                    <value>student1</value>
                </item>
                <item>
                    <label>ANITHA P</label>
                    <value>student2</value>
                </item>
                <item>
                    <label>ARFA ANJUM</label>
                    <value>student3</value>
                </item>
                <item>
                    <label>ASHWINI</label>
                    <value>student4</value>
                </item>
                <item>
                    <label>GANGAMMA H</label>
                    <value>student5</value>
                </item>
                <item>
                    <label>KHASEEM ALI</label>
                    <value>student6</value>
                </item>
                <item>
                    <label>MANJUNATHA</label>
                    <value>student7</value>
                </item>
                <item>
                    <label>MOHAMMED AYAN PASHA</label>
                    <value>student8</value>
                </item>
                <item>
                    <label>RENUKA</label>
                    <value>student9</value>
                </item>
                <item>
                    <label>SANDEEP KUMAR</label>
                    <value>student10</value>
                </item>
                <item>
                    <label>SUNIL GOWDA S</label>
                    <value>student11</value>
                </item>
                <item>
                    <label>TEJASWINI</label>
                    <value>student12</value>
                </item>
                <item>
                    <label>THANUSHREE S</label>
                    <value>student13</value>
                </item>
                <item>
                    <label>YALLINGA</label>
                    <value>student14</value>
                </item>
                <item>
                    <label>ZOYA</label>
                    <value>student15</value>
                </item>
                <item>
                    <label>OTHER</label>
                    <value>student16</value>
                </item>
                <item>
                    <label>ELATEST</label>
                    <value>student17</value>
                </item>
            </select1>
            <select1 appearance="minimal" ref="/data/ela_collect/activity">
                <label>Activity</label>
                <item>
                    <label>{{activity_title}}</label>
                    <value>{{activity_id}}</value>
                </item>
            </select1>
            <input ref="/data/ela_collect/prompt">
                <label>{{ question_prompt }}</label>
            </input>
            <upload appearance="new" mediatype="audio/*" ref="/data/ela_collect/recording">
                <label>Record learner</label>
            </upload>
        </group>
    </h:body>
</h:html>